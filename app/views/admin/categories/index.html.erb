<section class="admin-categories-index">
  <header class="page-header">
    <h1>Admin &raquo; Categories</h1>
  </header>
  <div class="well">
    <%= link_to '+ New Category', new_admin_category_path, class: 'btn btn-info' %>
  </div>
  <div class="panel panel-default categories">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to fa_icon('trash'), admin_category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
